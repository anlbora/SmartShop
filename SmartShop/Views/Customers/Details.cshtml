@model SmartShop.Models.Customer

@{
    ViewData["Title"] = "Müşteri Detayları";
}

<h2 class="mb-4">Müşteri Detayları - @Model.Name</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad Soyad</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">E-posta</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <a href="mailto:@Model.Email">@Model.Email</a>
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Adres</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Düzenle</a>
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>
</div>
