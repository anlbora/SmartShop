@model IEnumerable<SmartShop.Models.Customer>

@{
    ViewData["Title"] = "Müşteriler";
}

<h2 class="mb-4">Müşteri Listesi</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Müşteri</a>

<table class="table table-striped table-hover table-bordered align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>Adı</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(customer.Email))
                    {
                        <a href="mailto:@customer.Email">@customer.Email</a>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info me-1">Detay</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
