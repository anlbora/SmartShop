@model SmartShop.Models.Category

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h2 class="mb-4">Yeni Kategori Ekle</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Kategori Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Örn: Elektronik, Giyim" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
