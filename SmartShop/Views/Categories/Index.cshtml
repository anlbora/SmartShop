@model IEnumerable<SmartShop.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2 class="mb-4">Kategoriler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Kategori</a>

<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Kategori Adı</th>
            <th>Ürün Sayısı</th>
            <th class="text-center" style="width: 200px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.Products?.Count ?? 0)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
