@model SmartShop.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<h2 class="text-danger mb-4">Kategori Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu kategoriyi silmek üzeresiniz. Devam etmek istiyor musunuz?
</div>

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Kategori Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Evet, Sil</button>
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
        </form>
    </div>
</div>
